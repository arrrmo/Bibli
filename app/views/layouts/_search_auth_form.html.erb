<%= form_tag search_path, method: :get do %>

  	<div class="prenom_auteur">
		<%= label_tag :prenom_auteur, "Prénom Auteur : "%>
		<%= text_field_tag :prenom_auteur, params[:prenom_auteur], placeholder: "Entrez ici le prénom de l'auteur"%>
	</div>
	<div class="nom_auteur">
		<%= label_tag :nom_auteur, "Nom Auteur : "%>
		<%= text_field_tag :nom_auteur, params[:nom_auteur], placeholder: "Entrez ici le nom de l'auteur"%>
	</div>
<div class="actions">
  <%= submit_tag "Valider" %>
</div>
<% end %>